@page
@addTagHelper *, StuttgartCore

@model StuttgartCore.Pages.modul07.RechnungenPagingModel
@{
    ViewData["Title"] = "RechnungenPaging";
}

<h1>RechnungenPaging</h1>
<table id="table1">
    <vc:rechnung-paged page="@Model.Seite"></vc:rechnung-paged>
</table>
<a href="#" onclick="lade()" class="btn btn-outline-primary">lade...</a>

<script>
    function lade() {
        $.ajax({
            url: 'RechnungenPaging',
            type:'POST'
        }).done(function (daten) {
            $('#table1').append(daten);
        })

    }
</script>